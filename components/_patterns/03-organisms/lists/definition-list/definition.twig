{#
/**
 * Available variables:
 * - list_dl_base_class - the base classname
 * - list_dl_modifiers - array of modifiers to add to the base classname
 * - list_dl_blockname - blockname prepended to the base classname
 *
 * - listItems - TBD
 */
#}
{% set list_dl_base_class_var = list_dl_base_class|default('list-dl') %}

<dl class="{{ list_dl_base_class_var }}{% for modifier in list_dl_modifiers %} {{ list_dl_base_class_var }}--{{ modifier }}{% endfor %}{% if list_dl_blockname %} {{ list_dl_blockname }}__{{ list_dl_base_class_var }}{% endif %}">
  {% for definition_list_item in definition_list_items %}
    {% include "@molecules/lists/definition-item/definition-item.twig"
      with {
        "definition_item_modifiers": definition_list_item.definition_item_modifiers,
        "definition_item_terms": definition_list_item.definition_item_terms,
        "definition_item_definitions": definition_list_item.definition_item_definitions,
      }
    %}
  {% endfor %}
</dl>
