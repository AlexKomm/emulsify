{#
/**
 * Available variables:
 * - list_item_base_class - the base classname
 * - list_item_modifiers - array of modifiers to add to the base classname
 * - list_item_blockname - blockname prepended to the base classname
 * - list_item_label - (optional) a bold label before the list item itself
 * - list_item_content - the content of the list_item (typically text)
 *
 * Available blocks:
 * - list_item_label - replace the label
 * - list_item_content - replace the content
 *   Example: to insert multiple components (images, links, etc.)
 */
#}
{% set list_item_base_class_var = list_item_base_class|default('list-item') %}

<li class="{{ list_item_base_class_var }}{% for modifier in list_item_modifiers %} {{ list_item_base_class_var }}--{{ modifier }}{% endfor %}{% if list_item_blockname %} {{ list_item_blockname }}__{{ list_item_base_class_var }}{% endif %}">

  {% block list_item_label %}
    {% if list_item_label %}
      {% include "@atoms/03-lists/list-item-label/list-item-label.twig"
        with {
          "list_item_label": list_item_label
        }
      %}
    {% endif %}
  {% endblock %}

  {% block list_item_content %}
    {% include "@atoms/03-lists/list-item-content/list-item-content.twig"
      with {
        "list_item_content": list_item_content,
      }
    %}
  {% endblock %}
</li>
