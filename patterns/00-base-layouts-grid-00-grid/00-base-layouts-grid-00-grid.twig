{% if grid_label %}
{% include "@atoms/02-text/00-headings/heading-2/heading-2.twig"
  with {
    "heading": grid_label,
  }
%}
{% endif %}
<div class="grid{% if grid_variation %} grid--{{grid_variation}}{% endif %}{% if grid_divider %} grid--divider{% endif %}{% if grid_class %} {{ grid_class }}{% endif %}">
  {% block grid_content %}
    {% for item in items %}
      <div class="grid__item"></div>
    {% endfor %}
  {% endblock %}
</div>
